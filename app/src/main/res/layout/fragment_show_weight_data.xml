<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Weight.ShowWeightData">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10sp"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/weight_plan_layout1"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginTop="10sp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Name"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    />
                <TextView
                    android:id="@+id/weight_plan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:hint="name"
                    android:textColor="@color/Blue"
                    android:textSize="20sp" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/weight_plan_layout2"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_below="@id/weight_plan_layout1"
            android:layout_marginTop="10sp"


            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Gender"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:hint="gender"
                    android:textColor="@color/Blue"

                    android:id="@+id/weight_plan_gender"
                    android:textSize="20sp" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/weight_plan_layout3"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_below="@id/weight_plan_layout2"
            android:layout_marginTop="10sp"


            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Age"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:hint="age"
                    android:id="@+id/weight_plan_age"
                    android:textColor="@color/Blue"

                    android:textSize="20sp" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/weight_plan_layout4"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_below="@id/weight_plan_layout3"
            android:layout_marginTop="10sp"


            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Height"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:hint="cm"
                    android:id="@+id/weight_plan_height"
                    android:textColor="@color/Blue"

                    android:textSize="20sp" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/weight_plan_layout5"
            android:layout_width="match_parent"
            android:layout_below="@id/weight_plan_layout4"
            android:layout_marginTop="10sp"
            android:layout_height="35sp"



            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Current Weight"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:hint="CM"
                    android:id="@+id/weight_plan_current_weight"
                    android:textColor="@color/Blue"

                    android:textSize="20sp" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/weight_plan_layout6"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_below="@id/weight_plan_layout5"
            android:layout_marginTop="10sp"


            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Target Weight"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:hint="CM"
                    android:id="@+id/weight_plan_target_weight"
                    android:textColor="@color/Blue"
                    android:textSize="20sp" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</FrameLayout>

